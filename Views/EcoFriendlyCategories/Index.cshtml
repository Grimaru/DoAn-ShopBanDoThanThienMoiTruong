@model IEnumerable<WebDoAn__Demo1_.EcoFriendlyCategory>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm("Index", "EcoFriendlyCategories", FormMethod.Get))
{
    <p>Tìm tên thể loại:</p><input type="text" name="_name" />
    <input type="submit" value="search" />

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameCate)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NameCate)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.IDCate.Trim() })|
                    @Html.ActionLink("Details", "Details", new { id = item.IDCate.Trim() })|
                    @Html.ActionLink("Delete", "Delete", new { id = item.IDCate.Trim() })
                </td>
            </tr>
        }

    </table>
}

