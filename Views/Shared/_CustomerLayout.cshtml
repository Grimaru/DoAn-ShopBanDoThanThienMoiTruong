<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/Content/style.css">
    <link rel="stylesheet" href="~/Content/PagedList.css">
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <div id="div-top" style="background-color: #7ae347"></div>
    <header class="header">
        <a href="~/TrangChu/Index"><img src="@Url.Content("~/Content/images/16cede69-f3ba-4dd8-a5ce-287e39cfc472_preview_rev_1.png")" height="90" width="120" /></a>

        <div style="border: 1px solid transparent; background-color: white; border-radius: 25px">
            <a href="/Product/SearchOption" class="btn btn-default" style="list-style-type:none">Search theo giá</a>
        </div>

        <input type="checkbox" id="check">
        <label for="check" class="icons">
            <i class='bx bx-menu' id="menu-icon"></i>
            <i class='bx bx-x' id="close-icon"></i>
        </label>

        <nav class="navbar">
            <a href="~/TrangChu/Index" style="--i:0;">Home</a>
            <a href="~/TrangChu/About" style="--i:1;">About</a>
            <a href="~/Product/Product" style="--i:2;">Product</a>
            <a href="~/TrangChu/Contact" style="--i:3;">Contact</a>
            @if (Session["NameUser"] == null)
            {
                <a href="~/LoginUser/Index" style="--i:4">@*<span class="glyphicon glyphicon-log-in></span>*@Login</a>
            }

            else
            {
                <span><text>Welcome, </text> @Session["NameUser"]</span>
                <a href="@Url.Action("Index", "LoginUser")" style="--i:4">LogOut</a>
            }
        </nav>
        <div>
            <a href="~/ShoppingCart/ShowCart"><img src="@Url.Content("~/Content/images/cart.png")" id="cart" height="30" width="30" /></a>
            @Html.Action("BagCart", "ShoppingCart")
        </div>
    </header>
    <div>
        <div style="padding-top: 80px">
            @{ Html.RenderAction("CategoryPartial", "EcoFriendlyCategories");}
        </div>
        <div id="div-main">
            <div class="container-fluid body-content">
                <div class="row" style="padding-left: 50px">
                    <div class="col-md-10" id="div-containt">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>

        <!--- @*Sửa thanh navbar từ ngang xuống dọc trong _CustomerLayout*@--->

        <footer class="footer-distributed">
            <div class="footer-left">
                <h3>Nhóm <span style="font-family: 'Open Sans';">10</span></h3>
                <p class="footer-links">
                    <a href="~/TrangChu/Index" class="link-1">Home</a>
                    <a href="~/TrangChu/About">About</a>
                    <a href="~/Product/Product">Product</a>
                    <a href="~/TrangChu/Contact">Contact</a>
                </p>
                <p class="footer-company-name" style="color:white">HUFLIT 2023</p>
            </div>

            <div class="footer-center">

                <div>
                    <i class="fa fa-map-marker"></i>
                    <p><span>Thành phố Hồ Chí Minh</span>Trường Đại học Ngoại ngữ - Tin học (HUFLIT)</p>
                </div>

                <div>
                    <i class="fa fa-phone"></i>
                    <p>+84 28 38 632 052</p>
                </div>

                <div>
                    <i class="fa fa-envelope"></i>
                    <p><a href="mailto:contact@huflit.edu.vn" style="color:white">contact@huflit.edu.vn</a></p>
                </div>

            </div>
            <div class="footer-right">
                <p class="footer-company-about" style="color:white">
                    <span>Thông tin về trường</span>
                    Trường chuyên đào tạo các ngành liên quan đến công nghệ thông tin, ngôn ngữ và tài chính
                </p>
            </div>
        </footer>
    </div>
    </body>
    </html>
