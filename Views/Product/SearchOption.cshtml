@model IEnumerable<WebDoAn__Demo1_.EcoFriendlyProduct>
@{
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}
<div style="padding-top: -50px"></div>
@using (Html.BeginForm("SearchOption", "Product"))
{
    <text>Từ</text>
    <input type="number" name="min" />
    <text>Đến</text>
    <input type="number" name="max" />
    <input type="submit" value="Search" />
    <div style="padding-top: 50px"></div>
    <div class="container">
        <div class="row">
            @foreach (var pro in Model)
            {
                <div class="col-sm-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="pro-card" style="margin-left: 10px; margin-right: 30px; height: 450px">
                        <img src="@Url.Content("~/Content/images/"+pro.ImagePro)" height="250" width="250" />
                        <div class="box-description">
                            <p>Tên sản phẩm: @Html.DisplayFor(model => pro.NamePro)</p>
                            <p>Giá: @Html.DisplayFor(model => pro.Price)đ</p>
                            <div style="margin-top: 20px">
                                <a href="#" style="margin-left: 50px; text-decoration: none; color: #337ab7">Xem thêm về sản phẩm</a>
                            </div>
                            <div>
                                <a href="/ShoppingCart/AddtoCart/@pro.ProductID" class="btn btn-default" style="background-color: white; margin-top: 30px; border-color: #ccc">Buy</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}






